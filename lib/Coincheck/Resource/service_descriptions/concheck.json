{
  "name": "coincheck",
  "apiVersion": "v1",
  "baseUrl": "https://coincheck.jp/",
  "operations": {
    "ticker": {
      "httpMethod": "GET",
      "uri": "api/ticker",
      "summary": "各種最新情報を簡易に取得することができます。",
      "parameters": {
      }
    },
    "trade": {
      "httpMethod": "GET",
      "uri": "api/trades",
      "summary": "最新の取引履歴を取得できます。",
      "parameters": {
      }
    },
    "orderBook": {
      "httpMethod": "GET",
      "uri": "api/order_books",
      "summary": "板情報を取得できます。",
      "parameters": {
      }
    },
    "order.create": {
      "httpMethod": "POST",
      "uri": "api/exchange/orders",
      "summary": "新規注文",
      "parameters": {
        "rate": {
          "location": "postField",
          "type": "string",
          "required": true,
          "description": "注文のレート。（例）28000"
        },
        "amount": {
          "location": "postField",
          "type": "string",
          "required": true,
          "description": "注文での量。（例）0.1"
        },
        "order_type": {
          "location": "postField",
          "type": "string",
          "required": true,
          "description": "売りか買いかを指定。売りならば 'sell' 買いならば 'buy'"
        },
        "pair": {
          "location": "postField",
          "type": "string",
          "required": true,
          "description": "取引ペアを指定。現在は 'btc_jpy' のみです。"
        }
      }
    },
    "order.opens": {
      "httpMethod": "GET",
      "uri": "api/exchange/orders/opens",
      "summary": "未決済の注文一覧",
      "parameters": {
      }
    },
    "order.cancel": {
      "httpMethod": "DELETE",
      "uri": "api/exchange/orders/{id}",
      "summary": "注文のキャンセル",
      "parameters": {
        "id": {
          "location": "uri",
          "type": "string",
          "required": true,
          "description": " 新規注文または未決済の注文一覧のID"
        }
      }
    },
    "order.transactions": {
      "httpMethod": "GET",
      "uri": "api/exchange/orders/transactions",
      "summary": "取引履歴",
      "parameters": {
      }
    },
    "account.balance": {
      "httpMethod": "GET",
      "uri": "api/accounts/balance",
      "summary": "残高",
      "parameters": {
      }
    },
    "account.info": {
      "httpMethod": "GET",
      "uri": "api/accounts",
      "summary": "アカウント情報",
      "parameters": {
      }
    },
    "send.create": {
      "httpMethod": "POST",
      "uri": "api/send_money",
      "summary": "ビットコインの送金",
      "parameters": {
        "address": {
          "location": "postField",
          "type": "string",
          "required": true,
          "description": "送り先のビットコインアドレス"
        },
        "amount": {
          "location": "postField",
          "type": "string",
          "required": true,
          "description": "送りたいビットコインの量"
        }
      }
    },
    "borrow.create": {
      "httpMethod": "POST",
      "uri": "api/lending/borrows",
      "summary": "借入の申請をします。",
      "parameters": {
        "amount": {
          "location": "postField",
          "type": "string",
          "required": true,
          "description": "借りたい量"
        },
        "currency": {
          "location": "postField",
          "type": "string",
          "required": true,
          "description": " 通貨（現在は BTC のみ対応）"
        }
      }
    },
    "borrow.matches": {
      "httpMethod": "GET",
      "uri": "api/lending/borrows/matches",
      "summary": "借り入れしている通貨の一覧を表示します。",
      "parameters": {
      }
    },
    "borrow.repay": {
      "httpMethod": "POST",
      "uri": "api/lending/borrows/{id}/repay",
      "summary": "この id を元に返却をすることができます。",
      "parameters": {
        "id": {
          "location": "uri",
          "type": "string",
          "required": true,
          "description": " 新規注文または未決済の注文一覧のID"
        }
      }
    }
  }
}
